<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/double_default_size"
        android:layout_marginTop="@dimen/default_size"
        android:layout_marginEnd="@dimen/double_default_size"
        android:layout_marginBottom="@dimen/default_size"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="24dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/title"
            style="@style/Header"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/half_default_size"
            android:fontFamily="@font/minecraft_regular"
            android:letterSpacing="0.04"
            android:textColor="@color/regularText"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_default_size"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Button"
                android:id="@+id/buttonLeft"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Button"
                android:id="@+id/buttonRight"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/default_size"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>