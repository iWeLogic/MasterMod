<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.iwelogic.minecraft.mods.models.Category" />

        <variable
            name="viewModel"
            type="com.iwelogic.minecraft.mods.ui.main.mods.ModsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/background_bottom_line"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_size"
                android:layout_marginEnd="@dimen/default_size"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/minecraft_bold"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@{viewModel.title}"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:background="?attr/actionBarItemBackground"
                android:onClick="@{() -> viewModel.onClickSearch()}"
                android:scaleType="centerInside"
                android:src="@drawable/search"
                android:visibility="@{viewModel.category.equals(Category.SKINS.id) ? View.GONE : View.VISIBLE}" />

            <ImageView
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:background="?attr/actionBarItemBackground"
                android:onClick="@{() -> viewModel.onClickFavorite()}"
                android:scaleType="centerInside"
                android:src="@drawable/favorite" />

            <ImageView
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:background="?attr/actionBarItemBackground"
                android:onClick="@{() -> viewModel.onClickFilter()}"
                android:scaleType="centerInside"
                android:src="@drawable/filter" />

            <ImageView
                category="@{viewModel.category}"
                onSelect="@{viewModel.onSelectSort}"
                sort="@{viewModel.sort}"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:background="?attr/actionBarItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/sort"
                app:tint="@color/black" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            mods="@{viewModel.mods}"
            onClick="@{viewModel.onClick}"
            onScroll="@{viewModel.onScroll}"
            spanCount="@{viewModel.spanCount}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />

    </LinearLayout>

</layout>