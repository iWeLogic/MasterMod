<resources>

    <style name="BottomNavigationViewText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/minecraft_regular</item>
    </style>

    <style name="BottomNavigationViewTextActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/minecraft_regular</item>
    </style>

    <style name="SearchStyle">
        <item name="colorAccent">@color/titleText</item>
    </style>

    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/minecraft_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:button">@drawable/checkbox_button</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:fontFamily">@font/minecraft_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/default_size</item>
        <item name="android:paddingEnd">@dimen/default_size</item>
    </style>


    <style name="Header">
        <item name="android:textColor">@color/titleText</item>
        <item name="android:fontFamily">@font/minecraft_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>